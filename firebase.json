{
  "firestore": {
    "database": "(default)",
    "location": "eur3",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/__/functions/razorpayCreateOrder",
        "function": {
          "functionId": "razorpayCreateOrder",
          "region": "us-central1"
        }
      },
      {
        "source": "/__/functions/razorpayVerify",
        "function": {
          "functionId": "razorpayVerify",
          "region": "us-central1"
        }
      },
      {
        "source": "/__/functions/razorpayWebhook",
        "function": {
          "functionId": "razorpayWebhook",
          "region": "us-central1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "apphosting": {
      "port": 5002,
      "rootDirectory": "./",
      "startCommand": "npm run dev"
    },
    
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 8080
    },
    "ui": {
      "enabled": true,
      "port": 8000
    },
    "singleProjectMode": true
  }
}
